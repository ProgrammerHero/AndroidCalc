<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/root_2dplot">

  <TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_gravity="center_horizontal">

    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="@string/empty_equation"
      android:id="@+id/txt2DEqn" android:gravity="center_vertical|right"
      android:layout_weight="0.17" android:maxLines="1" android:padding="10dp"/>
    <Button
      style="?android:attr/buttonStyleSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Plot"
      android:id="@+id/btnPlot2D"/>

  </TableRow>

</LinearLayout>